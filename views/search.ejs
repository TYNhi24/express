<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tìm kiếm bạn bè</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <style>
      body {
        background-color: #f4f7fa;
        font-family: "Arial", sans-serif;
      }

      .container {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      h2 {
        color: #007bff;
        font-size: 28px;
        font-weight: bold;
      }

      .input-group {
        max-width: 600px;
        margin: 0 auto;
      }

      .btn-primary {
        background-color: #28a745;
        border-color: #28a745;
      }

      .btn-primary:hover {
        background-color: #218838;
        border-color: #1e7e34;
      }

      .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-bottom: 20px;
      }

      .card-img-top {
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
        height: 200px;
        object-fit: cover;
      }

      .card-body {
        text-align: center;
      }

      .card-title {
        font-size: 18px;
        color: #333;
        margin-bottom: 10px;
      }

      .btn-success {
        background-color: #007bff;
        border-color: #007bff;
      }

      .btn-success:hover {
        background-color: #0056b3;
        border-color: #004085;
      }

      .text-center {
        font-size: 16px;
      }

      .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
      }

      .card-container .col-md-4 {
        max-width: 300px;
      }

      /* Thêm hiệu ứng hover cho các card */
      .card:hover {
        transform: translateY(-5px);
        transition: all 0.3s ease-in-out;
      }
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <h2 class="text-center mb-4">Tìm kiếm bạn bè</h2>

      <!-- Form tìm kiếm -->
      <form method="get" action="/search">
        <div class="input-group mb-4">
          <input
            type="text"
            name="query"
            class="form-control"
            placeholder="Nhập tên người dùng..."
            value="<%= query %>"
          />
          <button type="submit" class="btn btn-primary">Tìm</button>
        </div>
      </form>

      <!-- Kết quả tìm kiếm -->
      <% if (users.length === 0) { %>
      <p class="text-center">Không tìm thấy người dùng nào.</p>
      <% } else { %>
      <div class="card-container">
        <% users.forEach(user => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img
              src="<%= user.avatar_url || 'https://via.placeholder.com/150' %>"
              class="card-img-top"
              alt="<%= user.username %>"
            />
            <div class="card-body">
              <h5 class="card-title"><%= user.username %></h5>
              <a href="#" class="btn btn-success">Kết bạn</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
